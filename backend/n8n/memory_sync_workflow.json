{
  "name": "Wellness Coffee - Memory Sync",
  "nodes": [
    {
      "parameters": {
        "path": "memory-sync",
        "responseMode": "lastNode",
        "options": {}
      },
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        250,
        300
      ],
      "id": "webhook-trigger",
      "name": "Webhook Trigger"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://backend:8000/v1/memory/add",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "x-agent-secret",
              "value": "YOUR_SECRET_HERE"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "text",
              "value": "={{ $json.body.text }}"
            },
            {
              "name": "source",
              "value": "n8n-agent"
            },
            {
              "name": "metadata",
              "value": "={{ JSON.stringify($json.body.metadata || {}) }}"
            }
          ]
        },
        "options": {}
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        470,
        300
      ],
      "id": "http-post-memory",
      "name": "Write to LanceDB"
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Write to LanceDB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}